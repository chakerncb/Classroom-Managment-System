                    <div class="text-center my-auto copyright"><span>Copyright © Chaker Necibi 2025</span></div>
                </div>
            </footer>
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
        <div id="modal-form" class="modal-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="form-title"><b>New Teacher:</b></h5>
                    <button type="button" class="btn-close" onclick="closeForm()"></button>
                </div>
                <form id="registrationForm" method="POST" enctype="multipart/form-data">
                    <input type="number" id="teacher_id" name="id" hidden>
                    <div class="mb-3">
                        <label for="code" class="form-label">Code</label>
                        <input type="text" id="teacher_code" name="code" class="form-control" required placeholder="Teacher code">
                    </div>
                    <div class="mb-3">
                        <label for="fname" class="form-label">First Name</label>
                        <input type="text" id="fname" name="fname" class="form-control" required placeholder="Teacher first name">
                    </div>
                    <div class="mb-3">
                        <label for="fname" class="form-label">Last Name</label>
                        <input type="text" id="lname" name="lname" class="form-control" required placeholder="Teacher last name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required placeholder="Teacher email">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Grade</label>
                        <input type="text" id="grade" name="grade" class="form-control" required placeholder="Teacher grade">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <!-- Password input field -->
                            <input type="password" id="password" name="password" class="form-control" required placeholder="Create a password">
                            <!-- Eye icon to toggle password visibility -->
                            <span class="input-group-text" id="toggle-password">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                    </div>
<!--                     
                    
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select id="role" name="role" class="form-select" required>
                            <option value="" disabled selected>Select your role</option>
                        </select>
                    </div> -->
                    <button type="submit" class="btn btn-primary">Register</button>
                    <button type="button" class="btn btn-secondary" onclick="closeForm()">Close</button>
                </form>
            </div>
        </div>
    </div>
    

    


