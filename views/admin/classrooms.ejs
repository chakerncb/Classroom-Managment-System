<!DOCTYPE html>
<html data-bs-theme="light" lang="en">

<%- include('partials/head') %>

<body id="page-top">
       <%- include('partials/alertFields') %>
    <div id="wrapper">

        <%- include('partials/sideBar') %>
        
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
               
                <%- include('partials/navBar') %>

                <div class="container-fluid">
                    <h3 class="text-dark mb-4">Classrooms</h3>
                    <div class="card shadow">
                        <div class="card-header py-3 flex-column justify-content-between align-items-center"> 
                            <button style="float: right;" class="btn btn-primary" onclick="openForm()">Add Classroom</button>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 text-nowrap">
                                    <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable"><label class="form-label">Show&nbsp;<select class="d-inline-block form-select form-select-sm">
                                                <option value="10" selected="">10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>&nbsp;</label></div>
                                </div>
                                <div class="col-md-6">
                                    <div class="text-md-end dataTables_filter" id="dataTable_filter"><label class="form-label"><input type="search" class="form-control form-control-sm" aria-controls="dataTable" placeholder="Search"></label></div>
                                </div>
                            </div>
                            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                                <table class="table my-0" id="dataTable">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>TYPE</th>
                                            <th>CAPACITY</th>
                                        </tr>
                                    </thead>
                                    <tbody id="classroomsTable">
                                        
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-md-6 align-self-center">
                                    <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">Showing 1 to 10 of 27</p>
                                </div>
                                <div class="col-md-6">
                                    <nav class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                                        <ul class="pagination">
                                            <li class="page-item disabled"><a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
                                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                                            <li class="page-item"><a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"><span>Copyright © Chaker Necibi 2025</span></div>
                </div>
            </footer>
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
        <div id="modal-form" class="modal-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="form-title"><b>New Classroom:</b></h5>
                    <button type="button" class="btn-close" onclick="closeForm()"></button>
                </div>
                <form id="registrationForm" method="POST" enctype="multipart/form-data">
                    <input type="text" id="clssroom_id" name="id" hidden>
                    <div class="mb-3">
                        <label for="code" class="form-label">Code</label>
                        <input type="text" id="clssroom_code" name="code" class="form-control" required placeholder="Classroom code">
                    </div>
                    <div class="mb-3">
                        <label for="capacity" class="form-label">Classroom Capacity</label>
                        <input type="number" id="capacity" name="capacity" class="form-control" required placeholder="Classroom capacity">
                    </div>
                    <div class="mb-3">
                        <label for="type" class="form-label">Classroom Type</label>
                        <select class="form-select" id="clssroom_type" name="type" required>
                            <option value="">Select Classroom Type</option>
                            <option value="SIMPEL">SIMPEL</option>
                            <option value="PRACTICLE">PRACTICLE</option>
                        </select>
                        
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                    <button type="button" class="btn btn-secondary" onclick="closeForm()">Close</button>
                </form>
            </div>
        </div>
    </div>
    

    


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/js/bs-init.js"></script>
    <script src="/public/js/theme.js"></script>
    <script src="/scripts/admin/classrooms.js"></script>
    <script src="/public/js/script.js"></script>

</body>
</html>