                        <input type="number" id="student_code" name="code" class="form-control" required placeholder="Teacher code">
                    </div>
                    <div class="mb-3">
                        <label for="fname" class="form-label">First Name</label>
                        <input type="text" id="fname" name="fname" class="form-control" required placeholder="Teacher first name">
                    </div>
                    <div class="mb-3">
