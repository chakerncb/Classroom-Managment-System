                    <div class="mb-3">
                        <label for="name" class="form-label">Module Name</label>
                        <input type="text" id="name" name="name" class="form-control" required placeholder="Module Name">
                    </div>
                    <div class="mb-3">
                        <label for="level" class="form-label">Module Level</label>
                        <select id="level-select" name="level" class="form-select" required>
                            <option value="">select a level</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="semester" class="form-label">Semester</label>
                        <input type="text" id="semester" name="semester" class="form-control" required placeholder="Semester">
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                    <button type="button" class="btn btn-secondary" onclick="closeForm()">Close</button>
                </form>
